<!-- Equipment -->
<div id="equipment" class="section md-padding bg-grey">
  <!-- Container -->
  <div class="container">
      <!-- Row -->
      <div class="row">
          <!-- Section header -->
          <div class="section-header text-center">
              <h2 class="title">Featured Equipment</h2>
          </div>
          <!-- /Section header -->
          <!-- Equipment #1 Workstation -->
          <div class="col-xs-6 equip">
              <!-- Equipment Image -->
              <img class="img-responsive equip-img-fix" src="./img/equip_1.JPG" alt="Workstation">
              <!-- Equipment Overlay -->
              <div class="overlay"></div>
              <!-- Equipment Content -->
              <div class="equip-content">
                  <h3>Workstation</h3>
                  <!-- Equipment Link -->
                  <div class="equip-link">
                      <a data-toggle="modal" data-target="#workstationModal" ><i class="fa fa-search"></i></a>
                  </div>
                  <!-- /Equipment Link -->
              </div>
              <!-- /Equipment Content -->
          </div>
          <!-- /Equipment #1 Workstation -->
          <!-- Equipment #2 Plugins & Pedals -->
          <div class="col-xs-6 equip">
              <!-- Equipment Image -->
              <img class="img-responsive mx-5" src="./img/equip_2.JPG" alt="Plugins & Pedals">
              <!-- Equipment Overlay -->
              <div class="overlay"></div>
              <!-- Equipment Content -->
              <div class="equip-content">
                  <h3>Plugins & Pedals</h3>
                  <!-- Equipment Link -->
                  <div class="equip-link">
                      <a data-toggle="modal" data-target="#plugModal" ><i class="fa fa-search"></i></a>
                  </div>
                  <!-- /Equipment Link -->
              </div>
              <!-- /Equipment Content -->
          </div>
          <!-- /Equipment #2 Plugins & Pedals-->
          <!-- Equipment #3 Gear -->
          <div class="col-xs-6 equip">
              <!-- Equipment Image -->
              <img class="img-responsive equip-img-fix" src="./img/equip_3.JPG" alt="Gear">
              <!-- Equipment Overlay -->
              <div class="overlay"></div>
              <!-- Equipment Content -->
              <div class="equip-content">
                  <h3>Gear</h3>
                  <!-- Equipment Link -->
                  <div class="equip-link">
                    <a data-toggle="modal" data-target="#gearModal" ><i class="fa fa-search"></i></a>
                  </div>
                  <!-- /Equipment Link -->
              </div>
              <!-- /Equipment Content -->
          </div>
          <!-- /Equipment #3 Gear-->
          <!-- Equipment #4  Microphones -->
          <div class="col-xs-6 equip">
              <!-- Equipment Image -->
              <img class="img-responsive" src="./img/equip_4.JPG" alt="Microphones">
              <!-- Equipment Overlay -->
              <div class="overlay"></div>
              <!-- Equipment Content -->
              <div class="equip-content">
                  <h3>Microphones</h3>
                  <!-- Equipment Link -->
                  <div class="equip-link">
                      <a data-toggle="modal" data-target="#micModal"><i class="fa fa-search"></i></a>
                  </div>
                  <!-- /Equipment Link -->
              </div>
              <!-- /Equipment Content -->
          </div>
          <!-- /Equipment #4 Microphones-->                      
      </div>
      <!-- /Row -->
  </div>
  <!-- /Container -->
</div>
<!-- /Equipment -->

<!-- Workstation Modal -->
<div class="modal left fade" id="workstationModal" tabindex="-1" role="dialog" aria-labelledby="workstationModal">
  <!-- Modal Dialog -->
  <div class="modal-dialog" role="document">
      <!-- Modal Content -->
      <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h3 class="modal-title text-center white-text" id="workstationModal">Workstation :</h4>
          </div>
          <!-- /Modal Header -->
          <!-- Modal Body -->
          <div class="modal-body">
              <div class="overlay"></div>
          	{{!-- DAW --}}
						<h5 class="white-text">Digital Audio Workstation:</h5>
							<ul>
							    <li>Cubase Professional 8</li>
							</ul>
						{{!-- /DAW --}}
						{{!-- Interface --}}
						<h5 class="white-text">Interface:</h5>
							<ul>
          			{{#each equipment}}
          	    	{{#if this.interface}}
        		      	<li>{{this.name}}</li>
          	    	{{/if}}
          	  	{{/each}}
          		</ul>
						{{!-- /Interface --}}
						{{!-- Mic Preamps --}}
						<h5 class="white-text">Microphone Preamps:</h5>
							<ul>
            		{{#each equipment}}
            	    {{#if this.mic_preamp}}
        	          <li>{{this.name}}</li>
                  {{/if}}
                {{/each}}
              </ul>
					  {{!-- /Mic Preamps --}}
						{{!-- Monitors --}}
						<h5 class="white-text">Monitors:</h5>
							<ul>
            		{{#each equipment}}
            	    {{#if this.monitor}}
        	          <li>{{this.name}}</li>
                  {{/if}}
                {{/each}}
              </ul>
						{{!-- /Monitors --}}
          </div>
          <!-- /Modal Body -->
      </div>
      <!-- /Modal Content -->
  </div>
  <!-- /Modal Dialog -->
</div>
<!-- /Workstation Modal -->

